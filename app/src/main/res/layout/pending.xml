<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/friendNameTextView"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="FriendName"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/acceptPendingButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:backgroundTint="#2CCA33"
        android:onClick="acceptPending"
        android:text="Akceptuj"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/goalNameTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/cancelPendingButton"
        android:layout_width="112dp"
        android:layout_height="50dp"
        android:backgroundTint="#CA0101"
        android:onClick="cancelPending"
        android:text="OdrzuÄ‡"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/goalNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/acceptPendingButton" />
</androidx.constraintlayout.widget.ConstraintLayout>